{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/jadenj13/smokin-meats-server.git",
  "author": "Jaden <jadenj133@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "run-s format:fix fix lint tsc && cp ./src/schemas/*.{graphql, gql} ./lib/schemas",
    "start": "npm run build && node ./lib/index.js",
    "dev": "run-s watch",
    "watch": "nodemon --watch 'src/**/*' -e ts,graphql,gql --exec 'ts-node' ./src/index.ts",
    "fix": "node_modules/tslint/bin/tslint -c tslint.json -p tsconfig.json --fix --force",
    "tsc": "node node_modules/typescript/bin/tsc",
    "format:fix": "pretty-quick --staged",
    "format:check": "prettier --config ./.prettierrc --list-different \"src/**/*{.ts,.js,.json}\"",
    "format:all": "prettier --config ./.prettierrc --write \"src/**/*{.ts,.js,.json}\""
  },
  "dependencies": {
    "apollo-datasource": "^0.5.0",
    "apollo-server-core": "^2.6.1",
    "apollo-server-express": "^2.6.1",
    "bcrypt": "^3.0.6",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "graphql": "^14.3.1",
    "graphql-tools": "^4.0.4",
    "https": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.5.8",
    "mongodb": "^3.2.6",
    "mongoose": "^5.5.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/graphql": "^14.2.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongodb": "^3.1.28",
    "@types/mongoose": "^5.5.3",
    "husky": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.11.0",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  }
}
